<%
		#require das gems necessarias
		
		require 'rubygems'
		require 'yaml'
		require 'twitter'
		
		#autenticacao via httparty
		
		httpauth = Twitter::HTTPAuth.new('acreditando_', 'pwacreditar1*')
		client = Twitter::Base.new(httpauth)
		
		search = Twitter::Search.new.from('acreditando_')
		search.per_page(2)
		
		search.each  do |r| %>
			<div id="Tweet"><%=r.text%>. <i><%=time_ago_in_words(r.created_at)%></i><br></div>
		<%end%>
